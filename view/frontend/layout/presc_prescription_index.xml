<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      layout="1column" 
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Configurador de gafas graduadas</title>
        <css src="Powerline_PrescripcionModule::css/configurator.css"/>
    </head>
    <body>
        <!-- Ocultar el título de la página (page-title) -->
        <referenceBlock name="page.main.title" remove="true"/>
        <referenceContainer name="content">
            <block class="Powerline\PrescripcionModule\Block\Configurator" 
                   name="prescription.configurator" 
                   template="Powerline_PrescripcionModule::configurator/index.phtml"
                   cacheable="false">
                <arguments>
                    <argument name="view_model" xsi:type="object">Powerline\PrescripcionModule\ViewModel\ConfiguratorViewModel</argument>
                </arguments>
            </block>
        </referenceContainer>
        
        <!-- Load JavaScript -->
        <referenceBlock name="head.additional">
            <block class="Powerline\PrescripcionModule\Block\Configurator" 
                   name="prescription.configurator.js" 
                   template="Powerline_PrescripcionModule::configurator/js.phtml"/>
        </referenceBlock>
    </body>
</page>
